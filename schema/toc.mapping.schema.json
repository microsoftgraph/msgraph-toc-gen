{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/microsoftgraph/msgraph-toc-gen/schema/toc.mapping.schema.json",
  "title": "Microsoft Graph workload mapping schema",
  "definitions": {
    "tocNode": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the TOC node",
          "type":"string"
        },
        "overview": {
          "description": "The path to an overview topic for this TOC node",
          "type": "string"
        },
        "workloads": {
          "description": "The workloads within the TOC node",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "description": "The workload identifier (ex. Microsoft.Exchange)",
                "type": "string"
              },
              "includedResources": {
                "description": "Resources in this workload to include in this TOC node",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "excludedResources": {
                "description": "Resources in this workload to exclude from this TOC node",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "id"
            ],
            "additionalProperties": false
          }
        },
        "childNodes": {
          "type": "array",
          "description": "TOC nodes under this node",
          "items": {
            "$ref": "#/definitions/tocNode"
          }
        },
        "additionalLinks": {
          "description": "Additional explicit links to put under this node",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "href": {
                "type": "string"
              }
            }
          }
        },
        "shouldSort": {
          "description": "Indicates whether the sub-nodes of this node should be sorted alphabetically.",
          "type": "boolean"
        }
      },
      "anyOf": [
        {
          "required": [
            "name",
            "workloads"
          ]
        },
        {
          "required": [
            "name",
            "childNodes"
          ]
        },
        {
          "required": [
            "name",
            "additionalLinks"
          ]
        }
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "tocNodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/tocNode"
      }
    },
    "resourceOverviews": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "resource": {
            "type": "string"
          },
          "overview": {
            "type": "string"
          }
        },
        "required": [
          "resource",
          "overview"
        ]
      }
    },
    "termOverrides": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "term": {
            "type": "string"
          },
          "override": {
            "type": "string"
          },
          "caseSensitive": {
            "type": "boolean"
          }
        },
        "required": [
          "term",
          "override"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "tocNodes"
  ],
  "additionalProperties": false
}
